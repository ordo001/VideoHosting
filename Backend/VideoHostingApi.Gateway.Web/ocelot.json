{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [ { "Host": "auth.api", "Port": 8080 } ],
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/file/video/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [ { "Host": "file.api", "Port": 8080 } ],
      "UpstreamPathTemplate": "/file/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "DELETE" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://gateway.api:8080"
  }
}
